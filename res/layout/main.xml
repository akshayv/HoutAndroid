<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello!"
            android:layout_gravity="center" android:textStyle="bold" android:textSize="40dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userNameTextView" android:layout_gravity="center" android:textStyle="bold"
            android:textColor="#FFFFFF" android:textIsSelectable="false" android:textSize="50dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Meetup"
            android:id="@+id/redirectCreateButton" android:layout_gravity="center" android:width="210dp"
            android:layout_marginTop="45dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Notifications"
            android:id="@+id/redirectNotificationsButton" android:layout_gravity="center" android:width="210dp"
            android:layout_marginTop="15dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Meetups"
            android:id="@+id/redirectCheckMeetupsButton" android:layout_gravity="center" android:width="210dp"
            android:layout_marginTop="15dp"/>
</LinearLayout>